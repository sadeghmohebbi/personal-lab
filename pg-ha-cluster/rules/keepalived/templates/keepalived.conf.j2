vrrp_instance VI_1 {
    state {{ 'MASTER' if inventory_hostname == 'vm1' else 'BACKUP' }}
    interface eth0
    virtual_router_id 51
    priority {{ 100 if inventory_hostname == 'vm1' else 90 }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1234
    }
    virtual_ipaddress {
        {{ virtual_ipaddress }}
    }
}
